//Hacer un programa que calcule el salario de un empleado, si se descuenta el 20% de su salario bruto.
Algoritmo salarioDescontado
	
	Definir  salario,actualSalario Como Real
	
	Escribir  "Ingrese el salario :"
	leer salario
	
	actualSalario =( salario - (salario*0.2))
	
	Escribir "Salario actualizado :",actualSalario

	
FinAlgoritmo
